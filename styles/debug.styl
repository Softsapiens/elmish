@import 'nib'

.debug
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  display: flex
  flex-direction: column
  .app
    flex: 1
    overflow-y: scroll
  .panel
    flex: 0 0 30px
    display: flex
    flex-direction: row
    input
      flex: 1
      margin-left: 10px
    label
      flex: 0 0 2em
      display: flex
      justify-content: center
      align-items: center
    button
      flex: 0 0 50px