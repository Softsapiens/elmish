@import 'nib'

.debug
  .panel
    transition: transform 0.2s ease-in-out
    transform: translate(0, 0, 0)
    position: fixed
    bottom: 0
    left: 0
    right: 0
    background: transparent
    height: 30px
    max-width: 500px
    margin: 10px auto
    display: flex
    flex-direction: row
    input
      flex: 1
      margin-left: 10px
      outline: none
    label
      flex: 0 0 2em
      display: flex
      justify-content: center
      align-items: center
    button
      flex: 0 0 30px
      outline: none
      border: 0
      background-color: transparent
      padding: 0
      margin: 0
      svg
        height: 30px
        width: 30px
    &.hidden
      transform: translate3d(0, 50px, 0)
